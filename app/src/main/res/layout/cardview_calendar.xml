<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/blue_border_rounded_cornwe"
    android:orientation="horizontal"
    android:padding="8dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calendar_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Calendar group"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_height="1.8dp"
            android:layout_width="match_parent"
            android:background="#30292626"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Calendar Info:" />

            <TextView
                android:id="@+id/calendar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/calendar_startblue"
                android:drawableTint="@color/bluelight"
                android:text="calendar title" />
            <TextView
                android:id="@+id/calendar_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_location"
                android:drawableTint="@color/bluelight"
                android:text="Calendar location" />

            <TextView
                android:id="@+id/calendar_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_info_unselected"
                android:drawableTint="@color/bluelight"
                android:text="Calendar details" />
            <TextView
                android:id="@+id/calendar_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_object_24dp"
                android:drawableTint="@color/bluelight"
                android:text="Calendar date" />
            <TextView
                android:id="@+id/calendar_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/time"
                android:drawableTint="@color/bluelight"
                android:text="Calendar start_time and end_time" />
        </LinearLayout>

        <View
            android:layout_height="1.8dp"
            android:layout_width="match_parent"
            android:background="#30292626"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/calendar_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonstyle"
                android:backgroundTint="@color/offline"
                android:drawableLeft="@drawable/ic_file_upload"
                android:padding="5dp"
                android:textSize="18sp"
                android:elevation="10dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>